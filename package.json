{
  "name": "@macielcr7/chat-notifier",
  "version": "1.0.1",
  "description": "Biblioteca TypeScript genérica para notificações padronizadas no Google Chat",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "demo": "ts-node scripts/demo-tombamento.ts",
    "demo:batch": "ts-node scripts/demo-batch.ts",
    "debug": "ts-node scripts/debug-threading.ts",
    "prepublishOnly": "npm run lint && npm test && npm run build"
  },
  "keywords": [
    "google-chat",
    "notifications",
    "webhook",
    "typescript",
    "cards-v2",
    "alerts",
    "monitoring"
  ],
  "author": "Exa Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nock": "^13.5.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exa/chat-notifier.git"
  }
}
